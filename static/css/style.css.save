 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.feature {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.feature h3 {
    color: #667eea;
    margin-bottom: 0.5rem;
}

/* Results Container */
.results-container {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.results-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e0e0e0;
}

.results-header h1 {
    color: #333;
    margin-bottom: 0.5rem;
}

.job-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #667eea;
    margin-bottom: 0.5rem;
}

.timestamp {
    color: #666;
    font-size: 0.9rem;
}

/* Match Score */
.match-score {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    margin: 2rem 0;
    padding: 2rem;
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    border-radius: 15px;
}

.score-circle {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
}

.score-value {
    font-size: 2.5rem;
    font-weight: bold;
}

.score-label {
    font-size: 1rem;
    opacity: 0.9;
}

.match-stats {
    display: flex;
    gap: 2rem;
}

.stat {
    text-align: center;
}

.stat-value {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: #667eea;
}

.stat-label {
    display: block;
    font-size: 0.875rem;
    color: #666;
}

/* Feedback Box */
.feedback-box {
    background: #f8f9fa;
    border-left: 4px solid #667eea;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 2rem 0;
}

.feedback-box h3 {
    color: #667eea;
    margin-bottom: 1rem;
}

.feedback-box p {
    line-height: 1.8;
    color: #333;
}

/* Skills Section */
.skills-section {
    margin: 2rem 0;
}

.skills-section h2 {
    margin-bottom: 1rem;
    color: #333;
}

.skills-table {
    overflow-x: auto;
}

.skills-table table {
    width: 100%;
    border-collapse: collapse;
}

.skills-table th,
.skills-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
}

.skills-table th {
    background: #f8f9fa;
    font-weight: 600;
    color: #333;
}

.skill-name {
    font-weight: 500;
}

/* Skill Status Badges */
.badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

.badge-present {
    background: #d4edda;
    color: #155724;
}

.badge-partial {
    background: #fff3cd;
    color: #856404;
}

.badge-missing {
    background: #f8d7da;
    color: #721c24;
}

/* Action Buttons */
.action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin: 2rem 0;
}

/* Session Info */
.session-info {
    text-align: center;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    margin-top: 2rem;
}

.session-info code {
    background: #e9ecef;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
}

/* History Container */
.history-container {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.history-container h1 {
    color: #333;
    margin-bottom: 0.5rem;
}

.subtitle {
    color: #666;
    margin-bottom: 2rem;
}

.history-list {
    display: grid;
    gap: 1rem;
}

.history-item {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 10px;
    border-left: 4px solid #667eea;
    transition: transform 0.3s;
}

.history-item:hover {
    transform: translateX(5px);
}

.history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.history-header h3 {
    color: #333;
    font-size: 1.1rem;
}

.match-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

.match-badge.high {
    background: #d4edda;
    color: #155724;
}
match-badge.medium {
    background: #fff3cd;
    color: #856404;
}

.match-badge.low {
    background: #f8d7da;
    color: #721c24;
}

.history-meta {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.875rem;
    margin-bottom: 1rem;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 3rem;
}

.empty-state p {
    color: #666;
    margin-bottom: 1rem;
}

/* Alerts */
.alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
}

.alert-error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

/* Footer */
footer {
    background: rgba(255, 255, 255, 0.95);
    padding: 2rem 0;
    text-align: center;
    color: #666;
    margin-top: 3rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero h1 {
        font-size: 2rem;
    }

    .match-score {
        flex-direction: column;
        gap: 2rem;
    }

    .match-stats {
        flex-direction: column;
        gap: 1rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    .history-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
}

